<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">
    
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="@string/enter_keywords"
            android:ems="10"
            android:id="@+id/inputSearch" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" tools:ignore="Autofill"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSuggestions"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            tools:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputSearch"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            tools:visibility="gone"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/inputSearch"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/enter_your_keywords"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/txtOnBoardingTitle"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            tools:visibility="gone"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputSearch" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/results_will_be_displayed_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtOnBoardingBody"
            tools:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/txtOnBoardingTitle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp" android:textSize="14sp"/>
    
    
    <android.support.constraint.Group android:layout_width="match_parent" android:layout_height="match_parent"
                                      android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                      android:layout_marginBottom="8dp"
                                      android:id="@+id/groupOnBoarding"
                                      android:visibility="gone"
                                      app:constraint_referenced_ids="txtOnBoardingTitle,txtOnBoardingBody,imgOnBoarding"
                                      app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:src="@drawable/search_no_internet"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/imgOnBoarding"
            tools:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/txtOnBoardingTitle" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputSearch" app:layout_constraintVertical_bias="0.9"
            android:scaleType="fitXY" tools:ignore="ContentDescription"/>
    <ImageView
            android:src="@drawable/search_no_internet"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgError" app:layout_constraintStart_toStartOf="@+id/inputSearch"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/inputSearch"
            tools:ignore="ContentDescription"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtErrorTitle" app:layout_constraintStart_toEndOf="@+id/imgError"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputSearch" app:layout_constraintEnd_toEndOf="@+id/inputSearch"
            android:layout_marginEnd="8dp" tools:text="Network Error" android:textSize="16sp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtErrorBody" app:layout_constraintStart_toStartOf="@+id/txtErrorTitle"
            app:layout_constraintEnd_toEndOf="@+id/txtErrorTitle" tools:text="No Internet"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtErrorTitle"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/imgError"/>
    <Button
            android:text="@string/try_again"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnError" app:layout_constraintStart_toStartOf="@+id/imgError"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/txtErrorBody"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgError"/>
    <android.support.constraint.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:id="@+id/groupError"
                                      android:visibility="gone"
                                      app:constraint_referenced_ids="btnError,txtErrorTitle,imgError,txtErrorBody"/>

</android.support.constraint.ConstraintLayout>