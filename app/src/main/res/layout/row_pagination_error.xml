<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    
    <TextView
            android:text="@string/something_went_wrong"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtErrorTitle" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textSize="18sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnRetry"
            app:layout_constraintTop_toTopOf="@+id/btnRetry" app:layout_constraintBottom_toBottomOf="@+id/btnRetry"/>
    <Button
            android:text="@string/retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRetry" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>